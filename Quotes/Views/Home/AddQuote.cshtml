<form asp-action="AddQuote" method="post">
    <div>
        <label asp-for="QuotesNote">Quote: </label>
        <input asp-for="QuotesNote" />
    </div>
    <div>
        <label asp-for="AuthorFirst"> First Name: </label>
        <input asp-for="AuthorFirst" />
    </div>
    <div>
        <label asp-for="AuthorLast"> Last Name: </label>
        <input asp-for="AuthorLast" />
    </div>
    <div>
        <label asp-for="Date">Date: </label>
        <input asp-for="Date" />
    </div>



    <div>
        <label asp-for="Subject">Subject: </label>
        <input asp-for="Subject" size="4" />
    </div>

    <div>
        <label asp-for="Citation">Citation: </label>
        <input asp-for="Citation">
           

    </div>

    <button type="submit">Add Quote</button>
