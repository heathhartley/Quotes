@{
    ViewData["Title"] = "Great Quotes";
}


@model Quotes.Models.View_Model.QuoteList

<h1 class="text-center">@ViewData["Title"]</h1>


<style>
    table, th, td {
        border: 1px solid black;
        width: 100%;
        height: 70px;
    }
</style>


<h1> </h1>

<table class="table table-striped table-dark" align="left">
    <thead>
        <tr>
            <th scope="col">
                Id
            </th>
            <th scope="col">Quote</th>
            <th scope="col">Author First</th>
            <th scope="col">Author Last</th>
            <th scope="col"> Date</th>
            <th scope="col"> Citation </th>



            <th scope="col"> Subject </th>
            <th scope="col"> Save </th>
            <th scope="col"> Delete </th>

        </tr>
    </thead>
    <tbody>
        @foreach (QuoteByPeople x in Model.Quotes)
        {

        <tr>
            <th scope="row">@x.QId</th>
            <td>@x.QuotesNote</td>
            <td>@x.AuthorFirst</td>
            <td>@x.AuthorLast</td>

            <td>@x.Date.ToString("dd/MM/yyyy")</td>
            <td>@x.Citation</td>
            <td>@x.Subject</td>


            <td>
                <form method="post" asp-action="Edit">
                    <button class="btn btn-secondary">Edit</button>
                    <input name="QId" id="QId" type="hidden" value="@x.QId" />
                </form>
            </td>
            <td>
                <form method="post" asp-action="Delete">
                    <input name="QId" id="QId" type="hidden" value="@x.QId" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>


        </tr>

        }

    </tbody>
</table>


    
    <button class="btn btn-danger"><a href="Home/AddQuote">Click here</a></button>



